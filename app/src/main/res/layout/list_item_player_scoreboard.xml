<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/layout_player_scoreboard">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/captaincrown"
        android:id="@+id/image_view_player_scoreboard_captain"
        android:adjustViewBounds="true"
        android:layout_gravity="center_vertical"
        android:maxWidth="10dp"
        android:maxHeight="10dp"
        android:scaleType="fitCenter"
        android:visibility="invisible"/>

    <TextView
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="wrap_content"
        android:id="@+id/text_player_scoreboard_name"
        android:text=""
        android:textSize="10sp"
        android:paddingStart="2dp"
        />

    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:id="@+id/text_player_scoreboard_score"
        android:text="Score"
        android:textSize="10sp"
        android:gravity="center_horizontal"/>

    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:id="@+id/text_player_scoreboard_kd"
        android:text="K / D"
        android:textSize="10sp"
        android:gravity="center_horizontal"/>

</LinearLayout>
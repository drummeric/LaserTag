<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    tools:context="com.taserlag.lasertag.fragments.MainMenuFragment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_centerInParent="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:textSize="50sp"
            android:text="Main Menu"
            android:id="@+id/main_menu_text_view"/>

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Create Game"
            android:id="@+id/create_game_button"
            android:layout_margin="15dp"
            android:onClick="showCreateGame"/>

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Join Game"
            android:id="@+id/join_game_button"
            android:layout_margin="15dp"
            android:onClick="showJoinGame"/>

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Stats"
            android:id="@+id/stats_button"
            android:layout_margin="15dp"
            android:onClick="showStats"/>

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Options"
            android:id="@+id/options_button"
            android:layout_margin="15dp"/>

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Log Out"
            android:id="@+id/log_out_button"
            android:layout_margin="15dp"
            android:onClick="logOut"/>

    </LinearLayout>

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardUseCompatPadding="true"
    card_view:cardBackgroundColor="@color/transparentCardWhite"
    android:id="@+id/card_view_stats_game">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_view_stats_game_name"
            android:layout_marginBottom="4dp"
            android:text="Game Name"
            android:textColor="@android:color/holo_blue_bright"
            android:textSize="20sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_view_stats_game_date"
            android:layout_alignParentRight="true"
            android:text="Date"
            android:textColor="@android:color/holo_blue_bright"
            android:textSize="20sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layout_stats_player"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_below="@id/text_view_stats_game_name"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/text_view_stats_player_score"
                android:text="Score: 0"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/text_view_stats_player_kd"
                android:text="K / D: 0 / 0"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/text_view_stats_player_hp"
                android:text="HP: 0%"/>

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>
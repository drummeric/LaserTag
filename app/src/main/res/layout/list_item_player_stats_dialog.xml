<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:id="@+id/layout_player_stats_dialog">

    <TextView
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="wrap_content"
        android:id="@+id/text_player_stats_dialog_name"
        android:text=""
        android:textSize="10sp"
        android:paddingStart="2dp"
        />

    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:id="@+id/text_player_stats_dialog_score"
        android:text="Score"
        android:textSize="10sp"
        android:gravity="center_horizontal"/>

    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:id="@+id/text_player_stats_dialog_kd"
        android:text="K / D"
        android:textSize="10sp"
        android:gravity="center_horizontal"/>

    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:id="@+id/text_player_stats_dialog_hp"
        android:text="HP%"
        android:textSize="10sp"
        android:gravity="center_horizontal"/>

</LinearLayout>